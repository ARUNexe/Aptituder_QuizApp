<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blackbackground"
    android:orientation="vertical"
    tools:context=".Numerical_Aptitude">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        app:srcCompat="@drawable/math_wallpic" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/numeric_titleround"
        android:text="Choose Level"
        android:layout_marginTop="-5dp"
        android:textAlignment="center"
        android:textColor="#E4DADA"
        android:textSize="48sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/level2_lock"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/level2"
            android:layout_marginStart="310dp"
            android:layout_marginTop="-27dp"
            android:elevation="5dp"
            app:srcCompat="@drawable/lock" />


        <ImageView
            android:id="@+id/level3_lock"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/level3"
            android:layout_marginStart="220dp"
            android:layout_marginTop="-27dp"
            android:elevation="5dp"

            app:srcCompat="@drawable/lock" />



        <Button
            android:id="@+id/level1"
            android:layout_width="108dp"
            android:layout_height="61dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/roundedbuttons"
            android:fontFamily="@font/heav"
            android:text="1"
            android:textAlignment="center"
            android:textSize="30sp"
            app:backgroundTint="#1b2928" />

        <Button
            android:id="@+id/level2"
            android:layout_width="108dp"
            android:layout_height="61dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="80dp"
            android:layout_toRightOf="@+id/level1"
            android:background="@drawable/roundedbuttons"
            android:clickable="false"
            android:text="2"
            android:textSize="30sp"
            app:backgroundTint="#1b2928" />

        <Button
            android:id="@+id/level3"
            android:layout_width="108dp"
            android:layout_height="61dp"
            android:layout_below="@+id/level2"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/roundedbuttons"
            android:clickable="false"
            android:text="3"
            android:textSize="30sp"
            app:backgroundTint="#1b2928" />

        <ImageView
            android:id="@+id/prize2"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_below="@+id/level2"
            android:layout_marginStart="310dp"
            android:layout_marginTop="-27dp"
            android:elevation="5dp"
            app:srcCompat="@drawable/prize_icon" />

        <ImageView
            android:id="@+id/prize3"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_below="@+id/level3"
            android:layout_marginStart="215dp"
            android:layout_marginTop="-27dp"
            android:elevation="5dp"
            app:srcCompat="@drawable/prize_icon" />

        <ImageView
            android:id="@+id/prize1"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_below="@+id/level2"
            android:layout_marginStart="136dp"
            android:layout_marginTop="-27dp"
            android:elevation="5dp"
            app:srcCompat="@drawable/prize_icon" />






    </RelativeLayout>

</LinearLayout>